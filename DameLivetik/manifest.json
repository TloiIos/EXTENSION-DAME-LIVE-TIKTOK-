{
  "manifest_version": 3,
  "name": "Aurora Elite - Multi System",
  "version": "2.5",
  "description": "Hệ thống hỗ trợ Dame TikTok và Auto Spam đa nền tảng (TikTok/Messenger)",
  "permissions": ["storage"],
  "host_permissions": [
    "https://*.tiktok.com/*",
    "https://*.facebook.com/*",
    "https://*.messenger.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.tiktok.com/*",
        "https://*.facebook.com/*",
        "https://*.messenger.com/*"
      ],
      "js": ["content.js"]
    }
  ]
}